<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        >

        <com.glympse.android.controls.GTimerView
            android:id="@+id/glympse_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="210dp" 
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
        />
        
        <TextView
            android:id="@+id/glympse_text_expires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/glympse_timer"
            android:layout_marginTop="25dp"
            android:textSize="22dp"
            android:singleLine="true"
            android:ellipsize="start"
        />

        <Button
            android:id="@+id/glympse_button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/glympse_timer"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:minWidth="160dp"
            android:singleLine="true"
            android:text="@string/glympse_time_picker_button"
            style="@style/GlympseButton.Orange"
        />

    </RelativeLayout>

