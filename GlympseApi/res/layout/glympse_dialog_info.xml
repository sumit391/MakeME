<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
    
	    <TextView
	        android:id="@+id/scene1_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:paddingBottom="20dp"
	        android:text="@string/glympse_info_glympse_is_about_location_sharing"
	        android:textColor="#636363"
	        android:textSize="11pt"
	    />
	    
	    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/scene1_map"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/intro_mapcircle"
            />

            <RelativeLayout
                android:id="@+id/scene1_arrowBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:id="@+id/scene1_arrow"
                    android:layout_width="25dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/intro_arrow_1"
                />

                <RelativeLayout
                    android:id="@+id/scene1_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scene1_arrow"
                    android:layout_marginTop="-50dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="80dp"
                    >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/intro_darkbubble"
                    />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="false"
                        android:paddingLeft="4dp"
                        android:paddingTop="4dp"
                        android:text="@string/glympse_info_mr_lebowski"
                        android:textColor="#f2f2f2"
                        android:textSize="4pt"
                    />
                    
                </RelativeLayout>
                
            </RelativeLayout>
            
            <ImageView
		        android:id="@+id/scene1_message"
		        android:layout_width="137dp"
		        android:layout_height="66dp"
		        android:src="@drawable/intro_bubble1" />
            
        </RelativeLayout>
        
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dp"
	        android:layout_weight="6.67"
	        android:gravity="center" >

            <ImageView
                android:id="@+id/scene2_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:src="@drawable/intro_dottedarrow"
            />

            <ImageView
                android:id="@+id/scene2_friend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scene2_arrow2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingTop="4dp"
                android:src="@drawable/intro_friend2"
            />

            <ImageView
                android:id="@+id/scene2_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@+id/scene2_arrow2"
                android:src="@drawable/intro_arrowleft"
            />

            <ImageView
                android:id="@+id/scene2_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/scene2_arrow2"
                android:src="@drawable/intro_arrowright"
            />

            <ImageView
                android:id="@+id/scene2_friend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/scene2_arrow3"
                android:layout_below="@+id/scene2_arrow3"
                android:layout_marginLeft="16dp"
                android:src="@drawable/intro_friend3"
            />

            <ImageView
                android:id="@+id/scene2_friend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/scene2_arrow1"
                android:layout_below="@+id/scene2_arrow1"
                android:layout_marginRight="16dp"
                android:src="@drawable/intro_friend1"
            />
            
        </RelativeLayout>
        
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        android:paddingTop="30dp"
	        >
            
	        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_duration"
            />
	        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:gravity="center"
		        android:text="@string/glympse_info_you_control_how_long"
		        android:textColor="#636363"
		        android:textSize="8pt"
		    />
	    
	    </LinearLayout>
	    
	    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="100dp"
            android:src="@drawable/glympselogo"
        />
	    
	    <TextView
	        android:id="@+id/text_api_version_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:paddingBottom="40dp"
	        android:textColor="#636363"
	        android:textStyle="bold"
	        android:textSize="8pt"
	    />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:textColor="#636363"
	        android:textStyle="bold"
	        android:textSize="8pt"
	        android:paddingTop="80dp"
	        android:text="@string/glympse_terms_of_use"
	    />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:textColor="#636363"
	        android:textSize="7pt"
	        android:autoLink="web"
	        android:text="@string/glympse_terms_of_use_link"
	    />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:textColor="#636363"
	        android:textStyle="bold"
	        android:textSize="8pt"
	        android:paddingTop="40dp"
	        android:text="@string/glympse_privacy_policy"
	    />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:textColor="#636363"
	        android:textSize="7pt"
	        android:autoLink="web"
	        android:text="@string/glympse_privacy_policy_link"
	    />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:textColor="#636363"
	        android:textSize="5pt"
	        android:paddingTop="100dp"
	        android:text="@string/glympse_copyright_line"
	    />
	    
    </LinearLayout>
    
</ScrollView>