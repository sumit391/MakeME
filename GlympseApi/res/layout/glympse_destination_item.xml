<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/glympse_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:minHeight="64dp"
    >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/glympse_text_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="#FF010101"
        />

        <TextView
            android:id="@+id/glympse_text_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="16dp"
            android:singleLine="false"
            android:ellipsize="marquee"
            android:textColor="#FF010101"
        />

        <TextView
            android:id="@+id/glympse_text_distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="16dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="#FFA0A0A0"
        />

    </LinearLayout>

    <com.glympse.android.controls.BusyImage
        android:id="@+id/glympse_image_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/glympse_people_picker_check_normal"
        android:visibility="gone"
    />

</LinearLayout>
