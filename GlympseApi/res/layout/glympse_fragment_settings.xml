<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/glympse_layout_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/glympse_settings_pad_left"
        android:paddingRight="@dimen/glympse_settings_pad_right"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.glympse.android.kit.send.controls.Photo
                android:id="@+id/glympse_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:itemPadding="4dp"
                android:background="@drawable/glympse_thumb_container"
                android:panelBackground="@color/glympse_x_blueBadge"
                android:textSize="10dp"
            />

            <!-- max username length on the server is 64 -->
            <com.glympse.android.controls.EditText
                android:id="@+id/glympse_edit_name"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:inputType="textCapWords|textPersonName"
                android:hint="@string/glympse_settings_nickname_hint"
                android:maxLength="64"
            />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/glympse_settings_general"
            android:textColor="@color/glympse_x_blueText"
        />

        <LinearLayout
            android:id="@+id/glympse_layout_broadcast_speed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/glympse_image_broadcast_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/glympse_help_collapse"
            />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/glympse_settings_broadcast_speed"
            />

            <com.glympse.android.controls.ToggleButton
                android:id="@+id/glympse_toggle_settings_broadcast_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/glympse_text_broadcast_speed_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:text="@string/glympse_settings_broadcast_speed_help"
            android:visibility="gone"
        />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/glympse_horizontal_rule"
            android:scaleType="fitXY"
        />

        <LinearLayout
            android:id="@+id/glympse_layout_expire_on_arrival"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/glympse_image_expire_on_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/glympse_help_collapse"
            />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/glympse_settings_expire_on_arrival"
            />

            <com.glympse.android.controls.ToggleButton
                android:id="@+id/glympse_toggle_expire_on_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/glympse_text_expire_on_arrival_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:text="@string/glympse_settings_expire_on_arrival_help"
            android:visibility="gone"
        />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/glympse_horizontal_rule"
            android:scaleType="fitXY"
        />

    </LinearLayout>

</ScrollView>
