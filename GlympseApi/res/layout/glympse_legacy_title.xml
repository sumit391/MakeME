<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <ImageView
        android:id="@+id/glympse_action_bar_left_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:src="@drawable/flat_left_chevron"
        />
    
    <TextView
        android:id="@+id/glympse_action_bar_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/glympse_action_bar_left_chevron"
        android:textColor="@android:color/darker_gray"
	    android:textStyle="bold"
        android:text="@string/glympse_configurator_actionbar_cancel"
    />

    <ImageView
        android:id="@+id/action_bar_logo"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/glympselogo"
    />

    <TextView 
        android:id="@+id/glympse_text_menuitem_send"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_margin="3dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:textColor="@color/glympse_disabled_orange_button"
	    android:textStyle="bold"
	    android:singleLine="true"
	    android:text="@string/glympse_configurator_menuitem_send"
	    android:background="@drawable/glympse_button_send"
	/>

</RelativeLayout>
